<?xml version="1.0"?>
<cloudbees-web-app xmlns="http://www.cloudbees.com/xml/webapp/1">     
    <appid>SimpleFinance</appid>
    <context-param>
        <param-name>application.environment</param-name>
        <param-value>prod</param-value>
    </context-param>
	<resource name="jdbc/simplefinance" auth="Container" type="javax.sql.DataSource">
 		<param name="username" value="simplefinance" />
 		<param name="password" value="123" />
 		<param name="url" value="jdbc:cloudbees://simplefinance" />
	</resource>    
</cloudbees-web-app>